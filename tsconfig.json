{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./node_modules/@sablier/devkit/tsconfig/base.json",
  "compilerOptions": {
    "declaration": true,
    "outDir": "lib",
    "rootDir": "src",
    "paths": {
      "@src": ["./src"],
      "@src/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}
